<Window x:Class="Saboteur.PlayerActions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saboteur"
        mc:Ignorable="d"
        Title="PlayerActions" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
                Width="100"
                Height="50"
                Content="Build"
                Command="{Binding BuildCommand}"/>
        <Button Grid.Row="1"
                Width="100"
                Height="50"
                Content="Take"
                Command="{Binding TakeCommand}"/>
        <Button Grid.Row="2"
                Width="100"
                Height="50"
                Content="Make action"
                Command="{Binding MakeActionCommand}"/>
    </Grid>
</Window>
